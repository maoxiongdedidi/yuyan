<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5A5A"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activitu_senior_dialog_content_layout"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical"
       >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:scaleType="fitXY"
            android:src="@mipmap/buy_vip_dialog"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_seniordialog_bottom"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#3B3B3B"
                android:text="开通会员纵享优厚待遇"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#727272"
                android:lineSpacingMultiplier="1.3"
                android:text="支持所有语种\n无限制字数翻译\n无限制语言翻译次数\n无限制拍照翻译次数\n去除广告，使用更干净"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/activitu_senior_dialog_commit_button"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_startup_dialog_button"
                android:textColor="#333333"
                android:text="立即开通"
                android:textSize="16sp"
                android:textStyle="bold"/>


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/delete_finish"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activitu_senior_dialog_content_layout"
        android:layout_marginTop="20dp"
        android:id="@+id/activitu_senior_dialog_finish_image"/>

</RelativeLayout>

</RelativeLayout>
