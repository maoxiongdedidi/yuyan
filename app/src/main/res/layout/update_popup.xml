<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#5A5A5A"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginRight="43dp"
        android:layout_marginLeft="43dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_startup_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/update_popup_title"
                android:layout_marginTop="47dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/update_popup_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="41dp"
                android:layout_marginTop="20dp"
                />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/update_popup_commit"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/bg_startup_dialog_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="立即升级"
                android:layout_marginBottom="25dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:gravity="center"/>


        </LinearLayout>
        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/delete_finish"
            android:id="@+id/update_popup_delete"/>
    </RelativeLayout>



</RelativeLayout>
